{% extends 'base.jinja2' %}
{% set active_page = "admin guests" %}

{% block header %}
  <h1>{% block title %}Manage Guests{% endblock %}</h1>
{% endblock %}

{% block content %}
<p><a href="{{url_for('admin.invite_guest')}}">Invite new guest</a></p>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Note</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  {% for guest in guests %}
    <tr>
      <td>{{guest['first_name'] + " " + guest['last_name']}}{% if guest['is_admin'] %} (Admin){% endif %}</td>
      <td>{{guest['email']}}</td>
      <td>{% if guest['note'] %}{{guest['note']}}{% endif %}</td>
      <td><a href="{{url_for('admin.edit_guest', guest_id=guest['id'])}}">Edit</a></td>
    </tr> 
  {% endfor %}
  </tbody>
</table>
{% endblock %}
