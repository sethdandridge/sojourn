<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>{% block title %}{% endblock %} - {{ config['APP_NAME'] }}</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='css/bootstrap.css') }}" />
  <link rel="stylesheet" href="{{ url_for('static', filename='css/fortnite.css') }}" />
  <link rel="stylesheet" href="{{ url_for('static', filename='css/datepicker.min.css') }}" />
  <script src="{{ url_for('static', filename='js/jquery-3.0.0.js') }}"></script>
</head>
<body>
{% include "nav.jinja2" %}
<main role="main" class="container">
  {% for category, message in get_flashed_messages(with_categories=true) %}
    {% if 'safe' not in category %}
      {% if 'success' in category %}
        <div class="alert alert-success" role="alert">
          {{ message|e }}
        </div>
      {% else %}
        <div class="alert alert-danger" role="alert">
          {{ message|e }}
        </div>
      {% endif %}
    {% else %}
      {% if 'success' in category %}
        <div class="alert alert-success" role="alert">
          {{ message }}
        </div>
      {% else %}
        <div class="alert alert-danger" role="alert">
          {{ message }}
        </div>
      {% endif %}
    {% endif %}
  {% endfor -%}
  <header>
    {% block header %}{% endblock %}
  </header>
  {% block content %}{% endblock %}
</main>
<script src="{{ url_for('static', filename='js/bootstrap.bundle.js') }}"></script>
</body>
</html>
